<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
                    android:id="@+id/text_firstname"
                    android:layout_width="@dimen/row_item_layout"
                    android:layout_height="@dimen/row_item_layout"
                    android:background="@color/colorBlue2"
                    android:gravity="center"
                    android:text="@string/row_item_text"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/row_item_size"
                    android:textStyle="bold"
             />

    <TextView
        android:id="@+id/text_name"
        android:text="@string/row_item_text"
        android:textSize="@dimen/row_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_firstname"


        />
    <TextView
        android:id="@+id/text_note"
        android:text="@string/row_item_text"
        android:textSize="@dimen/row_item_size_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_firstname"
        android:layout_below="@id/text_name"



        />




</RelativeLayout>

